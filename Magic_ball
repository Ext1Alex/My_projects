import random

print('Добро пожаловать в приложение "Магический шар". Он ответит на все ваши вопросы, главное их правильно задать!')

#Список случайных ответов на вопрос
answers = ['Бесспорно', 'Предрешено', 'Никаких сомнений', 'Определённо да', 'Можешь быть уверен в этом', 'Мне кажется - да', 'Вероятнее всего', 'Хорошие перспективы', 'Знаки говорят - да', 'Да', 'Пока неясно, попробуй снова', 'Спроси позже', 'Лучше не рассказывать', 'Сейчас нельзя предсказать', 'Сконцентрируйся и спроси опять', 'Даже не думай', 'Мой ответ - нет', 'По моим данным - нет', 'Перспективы не очень хорошие', 'Весьма сомнительно']

print('Как вас зовут?')
name = input()
print('Привет,', name + '!')

#Основное тело программы. Создаем флажок для прерывания цикла
flag = False
while flag == False:
    question = input('Задайте ваш вопрос: ')
    #Создаем функцию случайного выбора ответа из списка
    def choice():
        num = random.randint(0, 15)
        return answers[num]
    print(choice())
    print('Хотите ли вы задать еще вопрос,', name + '? (y - да, n - нет)')
    while True:
        final = input()
        if final.lower() == 'y' or final.lower() == 'да':
            break
    elif final.lower() == 'n' or final.lower() == 'нет':
        print('Возвращайся, если возникнут вопросы!')
        flag = True
    else:
        print('Введен некорректный символ/число. Пожалуйста, повторите попытку.')
        print('Хотите ли вы задать еще вопрос,', name + '? (y - да, n - нет)')
